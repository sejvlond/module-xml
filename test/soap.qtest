    *hash parseMessage(hash msg, WSOperation op, bool request) {
        msg."content-type" = msg.hdr."Content-Type";
        *hash pdata = WSDLLib::parseSOAPMessage(msg);
        if (request) {
            return op.deserializeRequest(pdata);
        } else {
            return op.deserializeResponse(pdata);
        }
    }

